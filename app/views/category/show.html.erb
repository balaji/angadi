<% content_for(:title, "Browse #{category.name} - Angadi") %>
<div class="container">
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-9 text-center">
            <h1><%= category.name %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <span>Browse by Brand</span>
                <% cache do %>
                    <% category.all_brands.each do |brand |%>
                        <a href="#" class="list-group-item"><%= brand.name %></a>
                    <% end %>
                <% end %>
            </div>
        </div>

        <div class="col-md-9">
            <div class="row">
                <% category.all_children.collect(&:products).flatten.each do |product| %>
                    <%= render partial: 'home/product', locals: { product: product } %>
                <% end %>
            </div>
        </div>
    </div>
</div>


